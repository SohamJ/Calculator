<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--textview and control bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"
            android:id="@+id/display"
            android:background="#212121"
            android:hint="@string/zero"
            android:textColor="@color/primary_text_default_material_dark"
            android:textColorHint="@color/primary_text_default_material_dark"
            android:textSize="35sp"
            android:textDirection="rtl"
            android:gravity="right|bottom"
            android:paddingBottom="3sp"


        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#424242"
                android:id="@+id/blank"

            />
            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/clear"
                android:text="DEL"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="25sp"
                android:background="#01579b"
                android:clickable="true"
                android:longClickable="true"




            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0px"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="#004d40"
            android:weightSum="4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:weightSum="3"
                >
            <Button android:id="@+id/one" android:text="1" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/two" android:text="2" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/three" android:text="3" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"

                >
                <Button android:id="@+id/four" android:text="4" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
                <Button android:id="@+id/five" android:text="5" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
                <Button android:id="@+id/six" android:text="6" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
            <Button android:id="@+id/seven" android:text="7" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/eight" android:text="8" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/nine" android:text="9" android:background="@android:color/transparent"  android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
            <Button android:id="@+id/dot" android:text="." android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/zero" android:text="0" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/equal" android:text="=" android:background="@android:color/transparent" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1" android:textSize="24sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="calculate"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:background="#00bfa5">
            <Button android:id="@+id/add" android:text="+" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1" android:textSize="25sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/sub" android:text="-" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1" android:textSize="25sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/mul" android:text="*" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1" android:textSize="25sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
            <Button android:id="@+id/div" android:text="/" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1" android:textSize="25sp" android:textColor="@color/primary_text_default_material_dark" android:clickable="true" android:onClick="onClick"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>